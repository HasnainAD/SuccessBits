<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background8"
    tools:context="com.hadilawar.successbits.FragmentsHub.MainFragment">

    <TextView
        android:id="@+id/quotetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="-7dp"
        android:text="Dont try to be someone else, be yourself,\n everyone else is taken."
        android:textColor="#ffffffff"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:id="@+id/breaker"
        android:background="#ffffff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/favimage"
        app:layout_constraintRight_toRightOf="@+id/quotetext"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/authorName"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/quotetext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/favorite"
        android:padding="8dp"
        android:id="@+id/favimage"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/quotetext"
        app:layout_constraintTop_toTopOf="@+id/shareimage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/share"
        android:id="@+id/shareimage"
        android:padding="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="11dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/speakimage"
        app:layout_constraintLeft_toRightOf="@+id/favimage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/speak"
        android:id="@+id/speakimage"
        android:foregroundGravity="left"
        android:padding="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/quotetext"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/shareimage" />


    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="90dp"
        android:layout_height="90dp"

        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/quotetext"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorName"
        android:text="Tony Robbins"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/authorImage"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/authorImage" />


</android.support.constraint.ConstraintLayout>
