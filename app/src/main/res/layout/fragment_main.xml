<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.hadilawar.successbits.MainFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/favorite"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/share"
        android:id="@+id/shareimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Dont try to be someone else, be yourself,\n everyone else is taken\n\t\t\t\t\t\t\t\t\t\t\t\tDilawar"
        android:id="@+id/quotetext"
        android:textSize="25dp"
        android:fontFamily="cursive"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quotetext"
        android:layout_below="@+id/quotetext"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/speaker60" />

    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/quotetext"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/jet" />


</RelativeLayout>
