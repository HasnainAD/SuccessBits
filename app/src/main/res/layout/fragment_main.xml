<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hadilawar.successbits.FragmentsHub.MainFragment">

    <TextView
        android:id="@+id/quotetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="-7dp"
        android:text="Dont try to be someone else, be yourself,\n everyone else is taken\n\t\t\t\t\t\t\t\t\t\t\t\tDilawar"
        android:textColor="#ffffffff"
        android:textSize="15sp" />

    <View
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:id="@+id/breaker"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/quotetext"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/favorite"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:id="@+id/favimage"
        android:layout_below="@id/breaker"
        android:layout_toLeftOf="@+id/shareimage"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/share"
        android:id="@+id/shareimage"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/breaker"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/speak"
        android:id="@+id/speakimage"
        android:foregroundGravity="left"
        android:layout_toRightOf="@id/shareimage"
        android:padding="8dp"
        android:layout_below="@id/breaker"/>

    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/authorName"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorName"
        android:text="Tony Robbins"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/quotetext"/>

