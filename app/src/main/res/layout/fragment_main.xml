<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context="com.hadilawar.successbits.MainFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/favorite"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/share"
        android:id="@+id/shareimage"/>

    <TextView
        android:id="@+id/quotetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="25dp"
        android:inputType="text|textMultiLine"
        android:text="Dont try to be someone else, be yourself,\n everyone else is taken\n\t\t\t\t\t\t\t\t\t\t\t\tDilawar"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quotetext"
        android:layout_below="@+id/quotetext"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/speaker_anim"
       />

    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/quotetext"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/jet" />


</RelativeLayout>
