<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background8"
    tools:context="com.hadilawar.successbits.MainFragment">





    <TextView
        android:id="@+id/quotetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        android:inputType="text|textMultiLine"
        android:text="Dont try to be someone else, be yourself,\n everyone else is taken\n\t\t\t\t\t\t\t\t\t\t\t\tDilawar"
        android:textColor="#ffffffff"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/favorite"
        android:layout_marginLeft="10dp"
        android:background="@drawable/action_buttons_background"
        android:padding="8dp"
        android:id="@+id/favimage"
        android:layout_below="@id/quotetext"
        android:layout_toLeftOf="@+id/shareimage"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/share"
        android:id="@+id/shareimage"
        android:background="@drawable/action_buttons_background"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/quotetext"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/speak"
        android:background="@drawable/action_buttons_background"
        android:id="@+id/speakimage"
        android:layout_toRightOf="@id/shareimage"
        android:padding="8dp"
        android:layout_below="@id/quotetext"/>




    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/authorName"
        android:layout_centerHorizontal="true"

         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorName"
        android:text="Tony Robbins"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/quotetext"/>


</RelativeLayout>
