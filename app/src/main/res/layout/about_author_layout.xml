<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bottom_sheet_indicator"
        android:tag="sticky"
        app:srcCompat="@drawable/up"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutauthortitle"
        android:text="About Tony Robbins"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutauthortext"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:scrollbars="vertical"
        android:text="Tony Robbins is an entrepreneur, best-selling author, philanthropist and the nationâ€™s #1 Life and Business Strategist. A recognized authority on the psychology of leadership, negotiations and organizational turnaround, he has served as an advisor to leaders around the world for more than 38 years. A recognized authority on the psychology of leadership, negotiations and organizational turnaround, he has served as an advisor to leaders around the world for more than 38 years."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        />

</LinearLayout>